<!DOCTYPE html>
<html>
  <head>
    <title>SportsTweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="innner">
        <div class="nav">
          <div class="nav_left">
            <%= link_to "Sports Tweet", root_path, class: :logo %>
          </div>
          <div class="nav_right">
            <%= link_to "ツイート", root_path, class: :nav_btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav_btn %>
            <%= link_to "ログイン", new_user_session_path, class: :nav_btn %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav_btn %>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="footer_text">Sports Tweet App</p>
    </footer>
  </body>
</html>
