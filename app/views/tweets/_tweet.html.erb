<div class="card">
  <%= link_to image_tag(tweet.image, class: :card_img ), root_path %>
  <div class="card_body">
    <%= link_to tweet.title, root_path, class: :card_title%>
    <p class="card_summary">
      <%= tweet.catch_copy %>
    </p>
    <%= link_to tweet.user.name, user_path(tweet.user.id), class: :card_user %>
  </div>
</div>